generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  USER
  ADMIN
}

enum TicketType {
  SOLIDAIRE
  NORMAL
  SOUTIEN
  GRATUIT
  PASS_CULTURE
}

model User {
  id          String   @id @default(cuid())
  email       String   @unique
  password    String
  name        String
  dateOfBirth DateTime
  role        UserRole @default(USER)
  createdAt   DateTime @default(now())

  tickets  Ticket[]
  planning Planning[]
  cart     Cart?
}

model Ticket {
  id          String     @id @default(cuid())
  userId      String
  type        TicketType
  price       Float
  name        String
  email       String
  dateOfBirth DateTime
  createdAt   DateTime   @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Conference {
  id          String   @id @default(cuid())
  title       String
  description String
  date        DateTime
  location    String
  capacity    Int
  category    String
  createdAt   DateTime @default(now())

  planning Planning[]
}

enum CartStatus {
  PENDING
  CONFIRMED
}

model Cart {
  id        String     @id @default(cuid())
  userId    String     @unique
  status    CartStatus @default(PENDING)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  user  User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  items CartItem[]
}

model CartItem {
  id          String     @id @default(cuid())
  cartId      String
  type        TicketType
  price       Float
  name        String
  email       String
  dateOfBirth DateTime
  createdAt   DateTime   @default(now())

  cart Cart @relation(fields: [cartId], references: [id], onDelete: Cascade)
}

model Planning {
  id           String   @id @default(cuid())
  userId       String
  conferenceId String
  createdAt    DateTime @default(now())

  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  conference Conference @relation(fields: [conferenceId], references: [id], onDelete: Cascade)

  @@unique([userId, conferenceId])
}
