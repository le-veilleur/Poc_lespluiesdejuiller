services:
  front:
    build:
      context: .
      dockerfile: Dockerfile.dev
    ports:
      - "3000:3000"
    env_file:
      - .env
    depends_on:
      db:
        condition: service_healthy
    volumes:
      # Monte le code source pour le hot-reload
      - ./src:/app/src
      - ./app:/app/app
      - ./pages:/app/pages
      - ./components:/app/components
      - ./public:/app/public
      - ./styles:/app/styles
      - ./lib:/app/lib
      - ./prisma:/app/prisma
      - ./next.config.js:/app/next.config.js
      - ./tsconfig.json:/app/tsconfig.json
      # Exclus node_modules et .next pour Ã©viter les conflits
      - /app/node_modules
      - /app/.next
    environment:
      - NODE_ENV=development
      - WATCHPACK_POLLING=true
    command: sh -c "npx prisma generate && npm run dev"

  db:
    image: postgres:16
    env_file:
      - .env
    ports:
      - "5432:5432"
    volumes:
      - pgdata:/var/lib/postgresql/data
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U ${POSTGRES_USER:-postgres}"]
      interval: 5s
      timeout: 5s
      retries: 5

  pgadmin:
    image: dpage/pgadmin4:latest
    env_file:
      - .env
    ports:
      - "5050:80"
    depends_on:
      - db
    volumes:
      - pgadmin_data:/var/lib/pgadmin

volumes:
  pgdata:
  pgadmin_data: