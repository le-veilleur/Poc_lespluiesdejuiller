generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  USER
  ADMIN
}

enum TicketType {
  SOLIDAIRE
  NORMAL
  SOUTIEN
  GRATUIT
  PASS_CULTURE
}

model User {
  id          String   @id @default(cuid())
  email       String   @unique
  password    String
  name        String
  dateOfBirth DateTime
  role        UserRole @default(USER)
  createdAt   DateTime @default(now())

  tickets  Ticket[]
  planning Planning[]
}

model Ticket {
  id        String     @id @default(cuid())
  userId    String
  type      TicketType
  price     Float
  createdAt DateTime   @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Conference {
  id          String   @id @default(cuid())
  title       String
  description String
  date        DateTime
  location    String
  capacity    Int
  category    String
  createdAt   DateTime @default(now())

  planning Planning[]
}

model Planning {
  id           String   @id @default(cuid())
  userId       String
  conferenceId String
  createdAt    DateTime @default(now())

  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  conference Conference @relation(fields: [conferenceId], references: [id], onDelete: Cascade)

  @@unique([userId, conferenceId])
}
